</head>

<body>

    {{>navbar1}}
    <div class="container">
        <div class="row mt-5">
            <div class="col">
                <div class="poster">
                    <div class="inner">
                        <label class="fname" for="fname">First Name</label>
                        <input type="text" id="fname" name="fname" style="font-size: 25px;
                       text-decoration: none; 
                        color: rgb(111, 108, 108);
                        ">

                        <label class="lastname" for="lastname">Last Name</label>
                        <input type="text" id="lastname" name="lastname" style="font-size: 25px;
                        text-decoration: none;
                        color: rgb(111, 108, 108);">


                        <label class="pemail" for="pemail">Parent's Email</label>
                        <input type="email" id="pemail" name="pemail" style="font-size: 25px;
                            text-decoration: none;
                            color: rgb(111, 108, 108);">

                        <label class="number" for="number" pattern="[+]{1}[0-9]{11,14}" required>Parent's Phone
                            Number</label>
                        <input type="tel" id="number" name="number" style="font-size: 25px;
                            text-decoration: none;
                            color: rgb(111, 108, 108);">

                        <label class="password" for="pwd">Password</label>
                        <input type="password" id="pwd" name="pwd" minlength="8" style="font-size: 25px;
                        text-decoration: none;
                        color: rgb(111, 108, 108);">

                        <label class="cpassword" for="cpwd">Confirm Password</label>
                        <input type="password" id="cpwd" name="pwd" minlength="8" style="font-size: 25px;
                            text-decoration: none;
                            color: rgb(111, 108, 108);">
                    </div>
                </div>
            </div>
        </div>
</body>


